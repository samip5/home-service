[Unit]
Description=dnsdist
After=network-online.target
Wants=network-online.target

[Container]
AddCapability=NET_BIND_SERVICE
ContainerName=dnsdist
Environment=TZ=Europe/Helsinki
Image=registry.skysolutions.fi/docker.io/powerdns/dnsdist-18:1.8.3
Exec=--log-timestamps
IP=172.16.9.4
IP6=fdbc:baa4:65a9:d::4
Network=containernet
Volume=./dnsdist/config/dnsdist.conf:/etc/dnsdist/dnsdist.conf

[Service]
Restart=always
TimeoutStartSec=900

[Install]
WantedBy=multi-user.target default.target
